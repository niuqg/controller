						<representation mediaType="application/yang.data+json" element="output"/>
					</response>
				</method>
			</resource>
			<resource path="opendaylight-queue-statistics:get-queue-statistics-from-given-port">
				<method name="POST">
					<request>
						<representation mediaType="application/xml" element="input"/>
